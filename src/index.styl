.title
    margin: 10px 30px 16px 10px
    border-bottom: solid 3px black;

.list-filter
    margin: 4px 16px
    width: 160px;
    height: 30px
    border: 1px solid #bbbbbb;
    font-size: 16px

.list-sorter
    margin: 4px 16px
    width: 160px;
    height: 30px
    border: 1px solid #bbbbbb;
    font-size: 16px

.todo-list
    font-size: 16px
    margin: 16px
    border-spacing: 12px
    text-align: center
    &__element
        &__name, &__deadline, &__state, &__priority
            font-size: 16px;
        &__delete-button
            padding: 6px;
            width: 100px;
            color: #fff;
            background-color: #f44242;
            font-size: 14px;
            &:hover
                background-color: #d63939;
                cursor: pointer;

.add-todo
    font-size: 16px
    margin: 12px
    &__title
        font: 20px
    &__form
        text-align: center
        border-spacing: 16px 0px
        &__name
            font-size: 16px;
            height: 26px;
            width: 160px;
            border-radius: 3px;
        &__deadline
            position: relative;
            display: inline-block;
            width: 160px;
            height: 30px;
            border: 1px solid #bbbbbb;
            border-radius: 3px;
            font-size: 16px;
        &__state
            margin: 10px;
            width: 120px;
            height: 32px
            border: 1px solid #bbbbbb;
            font-size: 16px
        &__priority
            margin: 10px;
            width: 55px;
            height: 32px
            border: 1px solid #bbbbbb;
            font-size: 16px
    &__add-button
        margin-left: 16px;
        width: 120px;
        height: 40px;
        background-color: #f5f5f5;
        font-size: 14px
        &:hover
            background-color: #dcdcdc;
            cursor: pointer;



